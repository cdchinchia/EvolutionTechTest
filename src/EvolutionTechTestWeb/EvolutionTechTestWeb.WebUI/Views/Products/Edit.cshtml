@model EvolutionTechTestWeb.Core.DTO.ProductDTO
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Editar un Producto</h2>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Update" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id"  />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Value"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                </div>  
                <div class="form-group row mt-4">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Editar Producto</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary form-control">Volver</a> 
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>